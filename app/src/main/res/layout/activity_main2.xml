<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/tv_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="dsfdfsdfsd"
        android:textStyle="normal" />

    <com.qin.face.widget.SelectView
        android:id="@+id/selectview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:indicator_height="15dp"
        app:indicator_width="15dp"
        app:selectview_height="15dp"
        app:selectview_indicator_space="1dp"
        app:title_color="@color/black"
        app:title_selectview_space="5dp"
        app:title_size="16sp"
        app:titles="@array/selectview_titles"
        app:veticalline_color="@color/black" />

    <TextView
        android:id="@+id/tv_drag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="dsfdfsdfsd"
        android:textStyle="normal" />
</LinearLayout>